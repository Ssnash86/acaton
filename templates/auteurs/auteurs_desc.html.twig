{% extends 'base.html.twig' %}

{% block title %}Description Auteurs{% endblock %}
{% block body %}
<main>
{% for auteurs in auteur %}
<div class="flex items-center w-[80vw] mx-auto mt-4 border-2 border-white rounded-xl p-4">
<img class="rounded-full" src="{{asset(auteurs.img)}}" alt="photo de l'auteur ">
<div class="flex flex-col items-center">
<h2 class="text-xl font-bold underline m-6"> {{auteurs.nom}} {{auteurs.prenom}}</h2>
{# <p>{{auteurs.date_naissance}}</p> #}
<p class="m-6">{{auteurs.description}}</p>
</div>
</div>
{% endfor %}
<h3 class="underline text-xl text-white m-6 font-bold">Liste des livres :</h3>
<section class="grid grid-cols-3 w-[80vw] mx-auto gap-4">
			{% for livres in livre %}
				<div class=" bg-white flex flex-col items-center gap-4 p-4 rounded-2xl">
				<h3 class="font-bold underline">{{livres.titre}}</h3>
					<div class="flex gap-4">
						<img class="min-w-[30%] h-auto" src="{{asset(livres.img)}}" alt="image du livre">
						<p style="display:-webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp:7;overflow: hidden;text-overflow: ellipsis">{{livres.resume}}</p>
					</div>
				</div>
			{% endfor %}
            {{ knp_pagination_render(livre_pag) }}
		</section>
</main>
{% endblock %}